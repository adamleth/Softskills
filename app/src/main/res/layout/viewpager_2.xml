<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="Inverter farver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView33"
                        android:layout_weight="1"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:text="Administrativt miljÃ¸"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView21"
                        android:layout_weight="1"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:text="Notifikationer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView14"
                        android:layout_weight="1"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/checkbox_inverter"
                        android:layout_weight="1"
                        />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/checkbox_administrativ"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/checkbox_notifikationer"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text="start vejledning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/start_introduction"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:descendantFocusability="blocksDescendants" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:text="Gem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button21"
                android:background="@drawable/button_primary_solid"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>