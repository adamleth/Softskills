<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.05"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/EditName"
                    android:layout_weight="1"
                    android:hint="Fornavn"
                    android:background="@drawable/textedit_custom"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/EditSurName"
                    android:layout_weight="1"
                    android:hint="Efternavn"
                    android:background="@drawable/textedit_custom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/EditEmail"
                android:hint="Email adresse"
                android:layout_weight="1.05"
                android:background="@drawable/textedit_custom"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/EditPassword"
                android:hint="Kodeord"
                android:layout_weight="1.05"
                android:background="@drawable/textedit_custom"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.05"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/EditPhone"
                    android:layout_weight="1"
                    android:hint="Telefon"
                    android:background="@drawable/textedit_custom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Opdater"
                android:id="@+id/ConfirmEdit"
                android:background="@drawable/button_primary_solid"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>